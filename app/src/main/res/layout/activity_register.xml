<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.ac.unsyiah.android.bereh.RegisterActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/rNama"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="  Nama"
        android:inputType="textPersonName"
        android:textSize="16dp"
        android:layout_marginBottom="80dp"
        android:layout_above="@+id/rPassword"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/rUsername"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="  Username"
        android:inputType="textPersonName"
        android:textSize="16dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/rPassword"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/rPassword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="  Password"
        android:inputType="textPassword"
        android:layout_marginBottom="80dp"
        android:layout_alignBottom="@+id/cardView"
        android:layout_alignLeft="@+id/rNama"
        android:layout_alignStart="@+id/rNama" />

    <android.support.v7.widget.CardView
        android:layout_width="180dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/cardView"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/btnLogin"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/capsule">

            <TextView
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Register"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login disini."
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:id="@+id/linearLayout">
    </LinearLayout>

</RelativeLayout>
